name:              java2scala
version:           1.0
Build-Type:        Simple
cabal-version:     >= 1.8
author:            Andrea Moruno
extra-source-files: src/J2s/Ag/Sintax.ag

executable java2scala
  main-is:         Main.hs
  hs-source-dirs:  src
  build-depends:   base,
                   directory,
                   uu-parsinglib,
                   uulib,
                   java2scala,
                   filepath,
                   Cabal >= 1.8,
                   pipes-old >=3.2.0 && <3.4,
                   pipes-safe-old == 1.2.0,
                   bytestring,
                   unix,
                   system-filepath,
                   uuagc,
                   uuagc-cabal

executable test
  main-is:       Main.hs
  hs-source-dirs: test
  build-depends:   base,
                   directory,
                   uu-parsinglib,
                   uulib,
                   java2scala,
                   filepath,
                   Cabal >= 1.8,
                   pipes-old >=3.2.0 && <3.4,
                   pipes-safe-old == 1.2.0,
                   bytestring,
                   unix,
                   system-filepath,
                   uuagc,
                   uuagc-cabal

