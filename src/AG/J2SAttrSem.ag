{
concatenateModifiers :: [TypeFieldDeclaration] -> TypeFieldDeclaration -> [TypeFieldDeclaration]
concatenateModifiers [] tpl = tpl:[]
concatenateModifiers ((f,s,t):xs) (ftpl, stpl, ttpl) = ((f ++ ftpl), "", "") : xs
}

